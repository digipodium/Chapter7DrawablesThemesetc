<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <size android:width="140dp"
                 android:height="64dp"/>
            <solid android:color="#843D0E"/>
            <corners android:radius="32dp"/>
            <padding android:bottom="12dp"
                android:left="16dp"
                android:right="16dp"
                android:top="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <size android:width="140dp"
                android:height="64dp" />
            <solid android:color="#f80"/>
            <corners android:radius="32dp"/>
            <padding android:bottom="12dp"
                android:left="16dp"
                android:right="16dp"
                android:top="12dp"/>
        </shape>
    </item>
</selector>